<%= form_for("user", :url => user_session_path) do |f| %>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, :placeholder => "your.name@unep-wcmc.org" %>
  </div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div id="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>

  <div id="sign_button"><%= f.submit "Sign in" %></div>
<% end %>

