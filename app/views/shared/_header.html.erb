<div class="header">
  <ul>
    <li class="unep-logo"><%= image_tag 'unep-wcmc.png' %></li>
    <li class="wcmcio-logo"><%= image_tag 'unep-wcmc.png' %></li>
    <li class="title">WCMC.io</li>
    <li class="strapline">Measure the impact of digital documents you care about</li>
    <% if current_user %>
      <li class="welcome">Welcome <%= current_user.first_name %>!</li>
      <li>
        <%= link_to edit_user_registration_path do %>
          <%= fa_icon 'user' %> Edit My Account
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <%= fa_icon 'sign-out' %> Log Out
        <% end %>
      </li>
    <% else %>
    <li>
      <%= link_to new_user_registration_path do %>
        <%= fa_icon 'user' %> Sign Up
      <% end %>
    </li>
    <li class="devise">
      <%= link_to new_user_session_path do %>
        <%= fa_icon 'sign-in' %> Sign In
      <% end %>
    </li>

    <% end %>
  </ul>
</div>
