  <div id="teams_table" class="expandable-table">
    <% if @visits_by_team_count > 0 %>
      <table class="table stripe datatable">
        <thead>
          <th>Team</th>
          <th>Visits</th>
        </thead>
        <tbody>
        <% @visits_by_team.each_with_index do |team, index| %>
          <tr class="<% if index > 7 %>all hidden<% end -%>">
            <td>
              <%= link_to team.name, team_path(team.slug) %>
            </td>
            <td>
              <%= number_with_delimiter(team.visit_count) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    <% else %>
      <big>No visits yet</big>
    <% end %>
  </div>
